{% include "heading.njk" %}
<div> {{ github }} </div>
{% for category, list in projects %}
  <article class="grid grid-cols-6 text-sm m-4">
    {# Category #}
    <h2 class="col-span-1 text-base font-bold">{{ category }}</h2>
    {# Projects #}
    <div class="col-span-5 flex flex-col justify-start gap-4 sm:gap-8 max-w-md">
      {% for project in list %}
        {# Card #}
        <div class="p-4 border-gray-400 border-[1px] rounded-md">
          <div class="flex flex-col gap-2">
            <div class="flex justify-between">
              <p class="text-[#479de8]"><a href="{{ project.url }}" translate="no">{{ project.name }}</a></p>
              <p class="text-[#969b8f] border-gray-400 border-[1px] rounded-md px-2">{{ project.status  }}</p>
            </div>
            <div class="flex flex-col gap-2">
              <p class="text-[#5b788f]">{{ project.description }}</p>
              <div class="flex items-center gap-1">
                <span class="h-3 w-3 bg-green-600 inline-block rounded-full"></span> Javascript
              </div>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </article>
{% endfor %}
</section>
