{% include "heading.njk" %}

<section class="flex flex-col gap-8">
{% for category, list in projects %}
  <article class="grid grid-cols-6">
    <h2 class="col-span-1">{{ category }}</h2>
    <dl class="col-span-5 flex flex-wrap justify-start gap-4 sm:gap-8">
      {% for project in list %}
        <div class="w-[20ch]">
          <dt><a href="{{ project.url }}" translate="no">{{ project.name }}</a></dt>
          <dd class="">{{ project.description }}</dd>
        </div>
      {% endfor %}
    </dl>
  </article>
{% endfor %}
</section>
