{% include "heading.njk" %}
<div> {{ github }} </div>
{% for category, list in projects %}
  <article class="grid grid-cols-6 text-sm m-4">
    {# Category #}
    <h2 class="col-span-1 text-base font-bold">{{ category }}</h2>
    {# Projects #}
    <div class="col-span-5">
      <div class="grid grid-cols-2 gap-4 sm:gap-8">
      {% for project in list %}
        {# Card #}
        <div class="p-4 border-gray-400 border-[1px] rounded-md">
          {# Wrapper #}
          <div class="flex flex-col gap-2">
            {# Top Row #}
            <div class="flex justify-between">
              <p class="text-[#479de8]"><a href="{{ project.url }}" translate="no">{{ project.name }}</a></p>
              {%- if project.status === "archive" %}
              <p class="text-[#ffca55] border-[#ffca55] border-[1px] rounded-md px-2">{{ project.status }}</p>
              {%- elseif project.status === "public" %}
              <p class="text-[#7b7b7b] border-[#7b7b7b] border-[1px] rounded-md px-2">{{ project.status }}</p>
              {%- endif %}
            </div>
            {# Bottom Row #}
            <div class="flex flex-col gap-4">
              <p class="text-[#5b788f]">{{ project.description }}</p>
              <div class="flex items-center gap-1">
                <span class="h-3 w-3 bg-green-600 inline-block rounded-full"></span> Javascript
              </div>
            </div>
          </div>
        </div>
      {% endfor %}
      </div>
    </div>
  </article>
{% endfor %}
</section>
