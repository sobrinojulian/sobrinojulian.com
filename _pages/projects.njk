<header>
  <h1 class="mt-0 text-4xl font-extrabold text-neutral-900 dark:text-neutral">Projects</h1>
</header>
<section class="flex flex-col max-w-full prose lg:flex-row dark:prose-invert mt-0 mb-12">
  <div class="min-w-0 min-h-0 max-w-prose">
    <div class="lead !mb-9 text-xl">Things Iâ€™ve released into the world<div>
  </div>
</section>

<section class="flex flex-col gap-8">
  <hr class="border-dotted w-36 border-neutral-400">
{% for category, list in projects %}
  <article class="grid grid-cols-6">
    <h2 class="col-span-1">{{ category }}</h2>
    <dl class="col-span-5 flex flex-wrap justify-start gap-4 sm:gap-8">
      {% for project in list %}
        <div class="w-[20ch]">
          <dt><a href="{{ project.url }}" translate="no">{{ project.name }}</a></dt>
          <dd class="">{{ project.description }}</dd>
        </div>
      {% endfor %}
    </dl>
  </article>
{% endfor %}
</section>
