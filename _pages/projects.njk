{# Projects #}
<div x-data="{ wip: true, stable: true, abandoned: false }">
  {# Filters #}
  <div class="flex flex-row gap-8 mb-6">
    {% for status in ["wip", "stable", "abandoned"] %}
    <label class="mt-4 text-[#479de8] cursor-pointer">
      <input type="checkbox" x-model="{{ status }}">
      Show {{ status }}
    </label>
    {% endfor %}
  </div>

  <div class="flex flex-col gap-4">
    {% for category, list in projects %}
    <article class="grid grid-cols-6 text-sm">
      {# Category #}
      <h2 class="col-span-1 text-base font-bold">{{ category }}</h2>
      {# Projects #}
      <div class="col-span-5">
        <div class="grid grid-cols-2 gap-4 sm:gap-8">
          {% for project in list %}
          {% include "card.njk" %}
          {% endfor %}
        </div>
      </div>
    </article>
    {% endfor %}
  </div>
</div>
