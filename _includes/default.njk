<!doctype html>
<html lang="{{ metadata.language }}" id="top">

<head>
  <title>{{ title or metadata.title }}</title>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="color-scheme" content="dark light">
  <link href="data:," rel="icon" />
  <link href="/tailwind.css" rel="stylesheet" />
  <link href="/extra.css" rel="stylesheet" />
  <link href="{{ 'atom.xml' | htmlBaseUrl(metadata.url) }}" type="application/atom+xml" rel="alternate" title="Atom feed for blog posts" />
</head>

<body class="flex flex-col min-h-screen px-6 m-auto text-lg leading-7 max-w-7xl bg-neutral text-neutral-900 dark:bg-neutral-800 dark:text-neutral sm:px-14 md:px-24 lg:px-32">
  {% include "base/header.njk" %}
  <main class="relative flex flex-col grow">
    {{ content | safe }}
  </main>
  {% include "base/footer.njk" %}
</body>

</html>
