<article class="flex items-center gap-4 max-w-prose">
  <div class="flex items-center justify-center p-4">
    <img class="w-20 h-full object-cover" alt="{{ post.data.title }}" src="/images/thumbnails/{{ post.data.thumbnail }}" loading="lazy">
  </div>
  <div class="flex flex-col">
    <h3 class="flex items-center text-xl font-semibold">
      <a
        class="text-neutral-800 decoration-primary-500 hover:underline hover:underline-offset-2 dark:text-neutral"
        href="{{ post.url }}"
        >{{ post.data.title }}</a
      >
    </h3>
    <div class="text-sm text-neutral-500 dark:text-neutral-400">
      <div class="flex flex-row flex-wrap items-center">
        <time datetime="{{ post.date | ISODate }}">
          {{ post.date | date("D MMMM YYYY") }}
        </time>
        {#
        <span class="px-2 text-primary-500">·</span>
        <span>??? words</span>
        #}
        <span class="px-2 text-primary-500">·</span>
        <span title="Reading time">{{ post.content | timeToRead }}</span>
      </div>
    </div>
  </div>
</article>
