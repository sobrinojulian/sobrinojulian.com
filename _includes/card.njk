<div x-show="(wip && '{{ project.status }}' === 'wip') || (stable && '{{ project.status }}' === 'stable') || (abandoned && '{{ project.status }}' === 'abandoned')" class="p-4 border-gray-400 border-[1px] rounded-md">
  {# Wrapper #}
  <div class="flex flex-col gap-2">
    {# Top Row #}
    <div class="flex justify-between">
      <p class="text-[#479de8]"><a href="{{ project.url }}" translate="no">{{ project.name }}</a></p>
      {%- if project.status === "stable" %}
        <p class="text-[#ffca55] border-[#ffca55] border-[1px] rounded-md px-2">{{ project.status }}</p>
      {%- elseif project.status === "wip" %}
        <p class="text-green-500 border-green-500 border-[1px] rounded-md px-2">{{ project.status }}</p>
      {%- elseif project.status === "abandoned" %}
        <p class="text-[#7b7b7b] border-[#7b7b7b] border-[1px] rounded-md px-2">{{ project.status }}</p>
      {%- endif %}
    </div>
    {# Bottom Row #}
    <div class="flex flex-col gap-4">
      <p class="text-[#5b788f]">{{ project.description }}</p>
      <div class="flex items-center gap-1">
        <span class="h-3 w-3 bg-[{{ project.language_color }}] inline-block rounded-full"></span> {{ project.language }}
      </div>
    </div>
  </div>
</div>
